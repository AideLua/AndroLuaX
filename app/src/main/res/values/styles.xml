<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 背景变白，去除阴影 -->
    <style name="Widget.AndroLuaX.Material3.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">?colorSurface</item>
        <item name="backgroundStacked">?colorSurface</item>
        <item name="backgroundSplit">?colorSurface</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="Widget.AndroLuaX.Material3.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">?colorSurface</item>
    </style>

    <style name="ThemeOverlay.AndroLuaX.Material3.ActionBar" parent="ThemeOverlay.Material3.ActionBar">
        <!--设置图标颜色和文字颜色，文字颜色拥有不同的状态-->
        <item name="colorControlNormal">@color/on_surface</item>
        <item name="actionMenuTextColor">@color/on_surface</item>
    </style>
</resources>
